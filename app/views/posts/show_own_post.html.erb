<% provide(:title, current_user.name) %>
<h1>自身の投稿</h1>

<%= link_to  "全体の掲示板", user_posts_path(current_user), class: "btn btn-primary" %>
<%= link_to  "フォローの投稿", "#", class: "btn btn-primary" %>
<%= link_to  "フォロワーの投稿", "#", class: "btn btn-primary" %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="post_form">
      <%= render 'post_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if current_user.posts.any? %>
      <h3>投稿 (<%= current_user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end %>
    <%= will_paginate @posts %>
  </div>
</div>