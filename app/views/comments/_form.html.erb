<!-- コメント入力フォーム ------------------------------------------------------------>
<%= form_with(model: [@user, @post, @comment], url: user_post_comments_path(current_user.id, @post.id), method: :post, local: true) do |f| %>
	<%= f.text_area :comment, class: "form-control", size: "40x5" %>
  <%= f.submit "送信", class: "btn btn-primary comment-submit float-right" %>
<% end %>
