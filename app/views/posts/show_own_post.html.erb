<% provide(:title, current_user.name) %>
<% provide(:class_text, 'post_form') %>

<h1><%= @user.name %>さんの投稿ページ</h1>

<%= link_to  "全体の掲示板", user_posts_path(current_user), class: "btn btn-primary" %>
<%= link_to  "フォロー", following_user_path(current_user), class: "btn btn-primary" %>
<%= link_to  "フォロワー", followers_user_path(current_user), class: "btn btn-primary" %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <% if current_user == @user %>
      <section class="post_form">
        <%= render 'post_form' %>
      </section>
    <% else %>
      <%= render 'shared/follow_form' %>
    <% end %>
  </aside>
  <div class="col-md-8">
    <h3>投稿 (<%= @user.posts.count %>)</h3>
    <% if @user.posts.any? %>
      <ol class="posts">
        <%= render @posts %>
      </ol>
    <% end %>
    <%= will_paginate @posts %>
  </div>
</div>