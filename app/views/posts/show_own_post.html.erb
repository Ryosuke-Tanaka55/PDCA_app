<% provide(:title, @user.name) %>

<%= link_to  "全体の掲示板", user_posts_path(current_user), class: "btn btn-primary" %>
<%= link_to  "フォローの投稿", "#", class: "btn btn-primary" %>
<%= link_to  "フォロワーの投稿", "#", class: "btn btn-primary" %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>投稿 (<%= @user.posts.count %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>