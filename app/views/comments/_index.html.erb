<!-- コメント内容(2件) ------------------------------------------------------------------>
<%= comments.count %>件コメント
<h5 class="more" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">もっと見る....</h5>
<% comments.first(2).each do |comment| %>
  <% unless comment.id.nil? %>
    <li class="comment-container">
      <div class="comment-box">
        <div class="comment-avatar">
          <%= image_tag "#{ comment.user.image.display_image }", fallback: "no_image.jpg", class:"comment-image", size: "40x40" %>
        </div>
        <div class="comment-text">
          <p><%= link_to "@#{ comment.user.name }", posts_show_own_post_user_path(comment.user.id) %></p>
          <div class="comment-entry">
            <%= comment.comment %>
            <% if comment.user == current_user %>
              <%= link_to user_post_comment_path(comment.post_id, comment.id), method: :delete, remote: true, class: "comment_destroy" do %>
                <i class="fas fa-trash-alt" style="color: black;"></i>
              <% end %>
            <% end %>
          </div>
            <span class="comment-date pull-right">
              <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            </span>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
