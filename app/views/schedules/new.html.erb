<<% provide(:title, '目標登録') %>
<% provide(:class_text, 'create_goal') %>
<% provide(:button_text, '新規作成') %>
<h1>目標設定</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @schedule, url: schedules_path, local: true) do |f| %>
        <%= render 'shared/error_messages', object: @schedule %>

        <%= f.label :goal, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :goal, class: "form-control" %>

        <%= f.label :tag, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :tag, class: "form-control" %>

        <%= f.label :start_day, class: "label-#{yield(:class_text)}" %>
        <%= f.datetime_select :start_day, class: "form-control datetime-form" %>

        <%= f.label :finish_day, class: "label-#{yield(:class_text)}" %>
        <%= f.datetime_select :finish_day, class: "form-control datetime-form" %>

        <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>

      <% end %>
  </div>
</div>>
