<%= link_to image_tag("#{ @user.image }", width: '150', :alt => 'ユーザーアイコン'), posts_show_own_post_user_path(@user) %>
<h1><%= @user.name %></h1>
<% if current_user == @user %>
  <span><%= link_to "マイページ", @user %></span>
<% else %>
  <span><%= link_to "#{ @user.name }さんのゴールへ", @user %></span>
<% end %>
<span><%= @user.introduction %></span>
<span><%= pluralize(@user.posts.count, "投稿") %></span>