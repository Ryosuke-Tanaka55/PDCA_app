<% visitor = notification.visitor %>
<% visited = notification.visited %>

<div class="col-md-6.mx-auto">
  <div class="form-inline clearfix">
    <span>
      <%= link_to user_path(visitor) do %>
        <%= link_to image_tag("#{ @user.image }", width: '50', :alt => 'ユーザーアイコン'), posts_show_own_post_user_path(@user) %>
        <strong>
          <%= visitor.name %>
       さん

      <% case notification.action %>
        <% when 'follow' then %>
          があなたをフォローしました。
        <% when 'like' then %>
          が<%= link_to 'あなたの投稿', posts_show_own_post_user_path(@user), style: "font-weight: bold;" %>
          にいいねしました。
        <% when 'comment' then %>
          <% if notification.post.user_id == visited.id %>
            の<%= link_to "あなたの投稿", posts_show_own_post_user_path(@user), style: "font-weight: bold;" %>
          <% else %>
            <span>
              <%= link_to post_path(notification.post) do %>
                <%= link_to image_tag("#{ @user.image }", width: '150', :alt => 'ユーザーアイコン'), posts_show_own_post_user_path(@user) %>
                <strong>
                  が<%= notification.post.user.name + "さんの投稿" %>
            </span>
            にコメントしました。
          <p class="text-muted.mb-0">
            <%= Comment.find_by(id: notification.comment_id)&.comment %>
          </p>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </span>
  <div class="small.text-muted.text-right">
    <%= time_ago_in_words(notification.created_at).upcase %>
  </div>
</div>