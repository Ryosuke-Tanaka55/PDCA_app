<% if logged_in? %>
  <% if current_user.already_liked?(post) %>
    <%= link_to user_post_likes_path(@user, post), method: :delete, remote: true do %>
      <i class="fa fa-thumbs-up" aria-hidden="true" style="color: #FF9900;">
        <%= post.likes.count %>
      </i>
    <% end %>
  <% else %>
    <%= link_to user_post_likes_path(@user, post), method: :post, remote: true do %>
      <i class="fa fa-thumbs-up" aria-hidden="true" style="color: #C0C0C0;">
        <%= post.likes.count %>
      </i>
    <% end %>
  <% end %>
<% else %>
  <i class="fa fa-thumbs-up" aria-hidden="true">
    <%= post.likes.count %>
  </i>
<% end %>