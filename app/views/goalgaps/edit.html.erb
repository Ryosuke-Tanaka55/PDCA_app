<% provide(:title, 'ゴールギャップ編集') %>
<% provide(:class_text, 'update_goalgap') %>
<% provide(:button_text, '編集') %>
<% provide(:button_cancel, '戻る') %>

<h1>ゴールギャップ編集</h1>
<h2>達成したい目標（ゴール）と現状とのギャップを編集します。</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_with(model: @goalgap, url: user_goal_goalgap_path(user_id: current_user.id, goal_id: @goal.id), method: :patch, local: true) do |f| %>
        <%= render 'shared/object_error_messages', object: @goalgap %>

        <%= f.label :gap, class: "label-#{yield(:class_text)}" %>
        <%= f.text_field :gap, class: "form-control" %>

        <%= f.label :detail, class: "label-#{yield(:class_text)}" %>
        <%= f.text_area :detail, class: "form-control" %>

        <%= f.label :solution, class: "label-#{yield(:class_text)}" %>
        <%= f.text_area :solution, class: "form-control" %>

        <%= f.label :impact, class: "label-#{yield(:class_text)}" %>
        <%= f.select :impact, Goalgap.impacts.keys, { include_blank: "選択してください。"}, 
            { class: "form-control" , required: true } %>

        <%= f.label :worktime, class: "label-#{yield(:class_text)}" %>
        <%= f.select :worktime, Goalgap.worktimes.keys, { include_blank: "選択してください。"}, 
            { class: "form-control" , required: true } %>

        <%= f.label :easy, class: "label-#{yield(:class_text)}" %>
        <%= f.select :easy, Goalgap.easies.keys, { include_blank: "選択してください。"}, 
            { class: "form-control" , required: true } %>

        <%= f.label :priority, class: "label-#{yield(:class_text)}" %>
        <%= f.select :priority, Goalgap.priorities.keys, { include_blank: "選択してください。"}, 
            { class: "form-control" , required: true } %>

        <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
        <%= link_to "#{yield(:button_cancel)}", user_goal_goalgaps_path(user_id: current_user.id, goal_id: @goal.id), class: "btn btn-default" %>

      <% end %>
  </div>
</div>
