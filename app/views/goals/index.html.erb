<% provide(:title, current_user.name) %>

<h1><%= current_user.name %>の目標（ゴール）一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "目標新規作成", new_user_goal_path(current_user), class: "btn btn-lg btn-primary pull-right" %>
    <table class="table table-hover" id="table-goals">
      <thead>
        <tr>
          <th><%= Goal.human_attribute_name :goal %></th>
          <th><%= Goal.human_attribute_name :start_day %></th>
          <th><%= Goal.human_attribute_name :finish_day %></th>
        </tr>
      </thead>
    
      <% if @goals.present? %>
        <% @goals.each do |goal| %>
          <tr>
            <td><%= link_to "#{goal.goal}", user_goal_path(@user.id, goal.id) %></td>
            <td><%= l(goal.start_day, format: :long) %></td>
            <td><%= l(goal.finish_day, format: :long) %></td>
            <td align="center">
              <%= link_to "詳細", user_goal_path(@user.id, goal.id), class: "btn btn-primary" %>
              <%= link_to "サブゴール一覧", user_goal_subgoals_path(user_id: current_user.id, goal_id: goal.id), class: "btn btn-info" %>
              <%= link_to "検証", "#", class: "btn btn-warning" %>
              <%= link_to "編集", edit_user_goal_path(@user.id, goal.id), class: "btn btn-success" %>
              <%= link_to "削除", user_goal_path(@user.id, goal.id), method: :delete,
                  data: { confirm: "「#{ goal.goal }」を削除してよろしいですか？" }, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>