<h2>新着投稿</h2>
  <% posts.each do |post| %>
    <%= link_to post_path(post) do %>
      <%= attachment_image_tag post, :image, size: "190x190", class: "coffee_image_media" %>
    <% end %>
    <%= link_to user_path(post.user_id) do %>
      <%= attachment_image_tag post.user, :profile_image, fallback: "no_image.jpg", class:"profile-img-circle", size: "30x30" %>
      <%= post.user.name %>
    <% end %>
    <div id="index_like_<%= post.id %>">
      <%= render 'likes/like', post: post %>
    </div>
  <% end %>